<div>
   <%= flash[:notice] %>
</div>

<div class = "col-md-3">
 <%= render 'users/list', book: @new_book, user: @user%>
</div>
<div class = "col-md-8 offset-md-1">
<h1>Book detail</h1>
  <div>
    <%= link_to user_path(@user.id) do %>
     <%= image_tag @book.user.get_profile_image(100,100) %>
    <% end %>
    <%= link_to @book.user.name, user_path(@user.id) %>
    <%= link_to @book.title, book_path(@book.id) %>
    <%= @book.body %>
    <% if @book.user == current_user %>
       <%= link_to edit_book_path(@book.id), class:"btn btn-sm btn-success" do %>Edit
       <% end %>
       <%= link_to "Destroy", book_path(@book.id), data: { confirm: "本当に消しますか？" }, method: :delete, class:"btn btn-sm btn-danger" %>
    <% end %>
  </div>
 </div